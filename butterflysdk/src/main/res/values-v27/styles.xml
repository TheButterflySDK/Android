<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BfSdkTheme" parent="BfSdkTheme.NoActionBar" />

    <style name="BfSdkTheme.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.BfWebViewer" parent="BfSdkTheme.NoActionBar">
        <!-- Transparent bars so content draws underneath -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Optional: light icons if your content is light/dark accordingly -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Donâ€™t force legacy fitting as we handle insets manually -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="android:windowFullscreen">true</item>
    </style>
</resources>